@page
@model CRUDCORE.Pages.FileUPLOADModel
@{
    ViewData["Title"] = "Excel to XML Converter";
}

<h2>Excel to XML Converter</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="fileInput">Choose Excel File:</label>
        <input type="file" name="fileInput" id="fileInput" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Convert</button>
</form>

@if (!string.IsNullOrEmpty(Model.ResultMessage))
{
    <div class="alert alert-success mt-3">
        @Model.ResultMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}

